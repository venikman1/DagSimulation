<?xml version='1.0'?>
<!DOCTYPE platform SYSTEM "https://simgrid.org/simgrid.dtd">
<platform version="4.1">
  <!-- The master actor (with some arguments) -->
  <actor host="Tremblay" function="master">
    <argument value="5"/>         <!-- Resource initiation  -->
    <argument value="3"/>         <!-- Number of workers -->
  </actor>
  <!-- The worker actors. -->
  <actor host="Ruby" function="worker">
    <argument value="0"/>
  </actor>
  <actor host="Perl" function="worker">
    <argument value="1"/>
  </actor>
  <actor host="Python" function="worker">
    <argument value="2"/>
  </actor>
</platform>
